pipeline {
    agent any

    options { skipDefaultCheckout() }

     stages {
        stage('Get Code') {
            steps {
                // Obtener cÃ³digo del repo
                git 'https://github.com/alvaro-unir/helloworld.git'
	            echo WORKSPACE
                sh 'ls -al'
                stash name:'code', includes:'**'
            }
        }
    
        stage('Build') {
           steps {
              echo 'Eyyy, esto es Python. No hay que compilar nada!!!'
           }
        }
        
        stage('Tests')
        {
            parallel
            {
                stage('Unit') {
                    agent {label 'linux'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            unstash name:'code'
                            sh '''
                                ls -la
                                export PYTHONPATH=${WORKSPACE}
                                pytest --junitxml=result-unit.xml test/unit
                            '''
                            stash name:'unit-res', includes:'result-unit.xml'
                       }
                    }
                }   
                
                
                stage('Rest') {
                    agent {label 'windows'}
                    steps {
                      catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                        unstash name:'code'
                        bat '''
                        set FLASK_APP=app\\api.py
                        set PYTHONPATH=%WORKSPACE%

                        start "flask" /B cmd /c ""C:\\Program Files\\Python314\\python.exe" -m flask run --host=127.0.0.1 --port=5000"

                        ping 127.0.0.1 -n 5 > nul

                        start "" cmd /c "java -jar C:\\UNIR\\wiremock-standalone-3.13.2.jar --port 9090 --root-dir test\\wiremock"

                        ping 127.0.0.1 -n 15 > nul

                        "C:\\Program Files\\Python314\\python.exe" -m pytest --junitxml=result-rest.xml test\\rest
                        '''

                      }
                      stash name:'rest-res', includes:'result-rest.xml'
                    }    
                }                
                
            }
        }

        stage('Results') {
            steps {
                unstash name:'unit-res'
                unstash name:'rest-res'
                junit 'result*.xml' 
            }
        }
     
    }
}